generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

  // const {from, text, subject,  date, to} = await simpleParser(message)
model Message {
  id          String   @id @default(cuid())
  from Person @relation("sentEmails", fields: [senderEmail], references: [email])
  to  Person[] @relation("recievedEmails")
  subject String?
  date DateTime?
  text String //plaintext version of the message
  senderEmail String
  }

